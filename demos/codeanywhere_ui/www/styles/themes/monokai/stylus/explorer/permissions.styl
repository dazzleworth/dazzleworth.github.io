/* PERMISSIONS STYL ======================================== */

.permissions-wrapper
	position: absolute
	top: 0
	bottom: 0
	left: 0
	right: 0
	width: 100%
	height: 100%
	flexbox()
	flex-flow: column nowrap
	background: color1


.permissions-wrapper .permissions-wrap
	position: relative
	background: color3
	flexbox()
	flex-flow: column nowrap
	width: 100%
	height: 100%




/* PERMISSIONS TOP ==================== */
.permissions-wrap .permissions-top
	height: 56px
	flexbox()
	flex-flow: row nowrap
	justify-content: space-between
	align-items: center
	position: relative
	z-index: 1000
	background: color1
	box-shadow(shadowLvl2)

	.permissions-top__desc
		flexbox()
		align-items: center
		height: 100%
		font-size: 18px
		font-weight: 400
		padding-left: 16px
		box-sizing()
		flex: 1

	/* Icons, Buttons */
	.permissions-top__back
		flexbox()
		justify-content: center
		align-items: center
		width: 48px
		height: 48px

	.permissions-top__back
		background: url('img/back.png') no-repeat center
		background-size: 24px !important

	.permissions__button
		flexbox()
		justify-content: center
		align-items: center
		height: 48px
		box-sizing()
		padding: 0 16px
		text-transform: uppercase
		font-size: 12px



/* PERMISSIONS BOTTOM ==================== */
.permissions-wrap .permissions-bot
	height: calc(100% - 56px)
	overflow: auto

	.numeric-value
		box-sizing()
		padding: 0 16px

		/* input overwrite */
		.mui-input .group input
			font-size: 30px

		.mui-input .group label
			font-size: 20px
			top: 20px

		.mui-input .group input:focus ~ label,
		.mui-input .group input:valid ~ label
			top: -10px
			color: #fff
			font-size: 11px
			font-weight: 300
			letter-spacing: 0.2px
		
		/* /input overwrite */

	.permissions-table
		margin-top: 10px

		table
			width: 100%
			border-collapse: collapse

			td
				text-align: center
				height: 42px
				border-top: 1px solid color4a12
				border-bottom: 1px solid color4a12
				border-right: 1px solid color4a12

				&:last-child
					border-right: none

				&:first-child
					text-align: left
					box-sizing()
					padding-left: 16px

			/* overvrite checkbox row */
			.checkbox-row
				padding: 0
				justify-content: center
			
			/* /overvrite checkbox row */


