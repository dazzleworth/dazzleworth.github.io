/* KEYBOARD ======================================= */



/* SSH keyboard ========== */

.keyboard-plugin
	height: 38px
	width: 100%
	position: fixed
	bottom: 0
	z-index: 10000000
	flexbox()
	flex-flow: row nowrap
	align-items: center
	justify-content: space-between
	background: keyboardBg
	color: keyboardColor

	button
		float: none
		min-width: 40px !important
		border-radius(5px)
		height: 80% !important
		padding: 0 16px
		color: keyboardColor

	button.toggled
		background: keyboardColor
		color: keyboardBg




@media only screen and (max-width: 380px) {
	.keyboard-plugin button {
		padding: 0 10px;
	}
}


