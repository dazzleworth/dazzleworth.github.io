/* LOADERS STYL */


/* Main Loading Screen ============================== */
.fade-out
	-webkit-transition: opacity 1.2s ease-in-out
	-moz-transition: opacity 1.2s ease-in-out
	-ms-transition: opacity 1.2s ease-in-out
	-o-transition: opacity 1.2s ease-in-out
	opacity: 0 !important

.fade-in
	-webkit-transition: opacity 1.2s ease-in-out
	-moz-transition: opacity 1.2s ease-in-out
	-ms-transition: opacity 1.2s ease-in-out
	-o-transition: opacity 1.2s ease-in-out
	opacity: 1 !important


.loading-screen-wrap,
.loading-screen-wrap .loading-logo-wrap,
.loading-screen-wrap .loading-ring-wrap
	position: absolute
	top: 0
	bottom: 0
	left: 0
	right: 0
	width: 100%
	height: 100%
	flexbox()
	justify-content: center
	align-items: center
	z-index: 100

.loading-screen-wrap
	background: color11

.loading-screen-wrap .loading-logo-wrap
	opacity: 0
	z-index: 110

.loading-screen-wrap .loading-ring-wrap
	opacity: 0
	z-index: 120



/* CA Logo */
.loading-screen-wrap .loading-logo
	width: 100%
	max-width: 260px
	position: relative

	img
		width: 100%

/* Loading ring */
.loading-screen-wrap .loading-ring
	flexbox()
	justify-content: center
	align-items: center
	position: relative



/* Loader Ring ================ */
.loading-ring-loader
	position: relative
	margin: 0 auto
	width: 70px
	height: 70px

	&:before
		content: ''
		display: block


.circular
	animation: rotate 2s linear infinite
	height: 100%
	transform-origin: center center
	width: 100%
	position: relative
	top: 0
	bottom: 0
	left: 0
	right: 0
	margin: auto


.path
	stroke-dasharray: 1, 200
	stroke-dashoffset: 0
	animation: dash 1.5s ease-in-out infinite
	stroke-linecap: round
	stroke-width: 2.5
	stroke: color6


@keyframes rotate {
	100% {
		transform: rotate(360deg);
	}
}

@keyframes dash {
	0% {
		stroke-dasharray: 1, 200;
		stroke-dashoffset: 0;
	}
	50% {
		stroke-dasharray: 89, 200;
		stroke-dashoffset: -35px;
	}
	100% {
		stroke-dasharray: 89, 200;
		stroke-dashoffset: -124px;
	}
}















/* Folder Loading/Empty Screen ============================== */

/* Hides all elements inside */
.child-nodes-none > div.endor-node-wrap
	display: none



.child-nodes-none > div.endor-node-child-nodes-overlay,
.child-nodes-none > div.empty-node
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	background: color2

/* Loading screen */
.child-nodes-none > div.endor-node-child-nodes-overlay
	z-index: 20

	.overlay-msg
		flexbox()
		justify-content: center
		width: 100%
		height: 100%
		margin-top: 100px

	.overlay-msg:before
		display: block
		position: absolute
		content: ''
		background: red
		width: 50px
		height: 50px
		top: 30px
		left: 50%
		margin-left: -25px

/* Empty Folder screen */ 
.child-nodes-none > div.empty-node,
.empty-node
	width: 100%
	height: 100%
	z-index: 10

	.empty-msg
		flexbox()
		justify-content: center
		width: 100%
		height: 100%
		margin-top: 50px


