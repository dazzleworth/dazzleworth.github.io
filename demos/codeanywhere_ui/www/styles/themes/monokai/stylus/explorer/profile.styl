/* PROFILE TOP ========== */
.profile-wrap .profile-top
	flexbox()
	flex-flow: column nowrap
	position: relative
	z-index: 1000
	background: color5
	box-shadow(shadowLvl2)
	box-sizing()
	padding: 20px 0
	align-items: center


	/* PROFILE IMAGE BLOCK */
	.profile-image
		flexbox()
		justify-content: center
		align-items: center
		width: 100px
		height: 100px
		font-size: 18px
		font-weight: 400
		box-sizing()
		border-radius: 100%
		background: color4
		margin: 0 auto
		position: relative
		z-index: 100
		
		.profile-image__center
			flexbox()
			flex-flow: column nowrap
			justify-content: center
			align-items: center

			.profile-image__center--prim
				color: color6
				font-size: 20px
				font-weight: 600
			
			.profile-image__center--sec
				color: color9
				font-size: 9px
				text-transform: uppercase


	/* PROFILE PIE */
	.profile-pie-left,
	.profile-pie-right
		flexbox()
		justify-content: center
		align-items: center
		width: 110px
		height: 110px
		box-sizing()
		border-radius: 100%
		background: #d5d5d5
		margin-top: 10px
		position: absolute
		left: 50%
		top: 5px
		margin-left: -55px

	.profile-pie-left
		z-index: 1
		background: linear-gradient(90deg, #222 50%, transparent 50%),linear-gradient(-270deg, #7f3f98 50%, #222 50%)
	  
	.profile-pie-right
		z-index: 2
		background: linear-gradient(90deg, #222 50%, transparent 50%), linear-gradient(-270deg, #7f3f98 50%, transparent 50%)




	/* Profile Details Block */
	.profile-details
		width: 100%
		flexbox()
		flex-flow: column nowrap
		margin: 20px 0

		.profile-details__username,
		.profile-details__email
			ellipsis()

		.profile-details__username
			text-transform: capitalize
			margin-bottom: 3px
		
		.profile-details__email
			text-transform: lowercase

	

	/* PROFILE DASHBOARD BLOCK */
	/* Button */
	.profile-button
		flexbox()
		justify-content: center
		align-items: center
		width: auto
		min-width: 64px
		height: 36px
		border: none
		border-radius(3px)
		outline: none
		text-transform: uppercase
		background: color6
		color: #d6cbcb
		font-size: 14px
		box-sizing()
		padding: 0 16px
		margin: 0 auto
	
	
	.profile-steps
		width: 100%
		flexbox()
		flex-flow: column nowrap
		margin: 15px 0
		font-size: 12px

		.profile-steps__top
			color: color10
			margin-bottom: 5px

		.profile-steps__bot
			flexbox()
			flex-flow: row nowrap
			align-items: center

			.profile-steps__sec--icon
				flexbox()
				flex-shrink: 0
				width: 16px
				height: 16px

			.profile-steps__sec--text
				margin-left: 5px


	/* PROFILE UPGARDE BLOCK */
	.upgrade-wrap
		border-top: 1px solid color3
		width: 100%




		/* Percentage */ 
		.upgrade-row.percentage-1 
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #6cc781 10%, #222 10%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #6cc781
		.upgrade-row.percentage-2
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #6cc781 20%, #222 20%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #6cc781
		.upgrade-row.percentage-3
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #6cc781 30%, #222 30%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #6cc781
		.upgrade-row.percentage-4
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #6cc781 40%, #222 40%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #6cc781
		.upgrade-row.percentage-5
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #ffe600 50%, #222 50%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #ecd501
		.upgrade-row.percentage-6
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #ffe600 60%, #222 60%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #ecd501
		.upgrade-row.percentage-7
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #ffe600 70%, #222 70%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #ecd501
		.upgrade-row.percentage-8
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #ffe600 80%, #222 80%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #ecd501
		.upgrade-row.percentage-9
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #e53934 90%, #222 90%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #e53934
		.upgrade-row.percentage-10
			.upgrade-row__top .upgrade-row__top--bar
				background: linear-gradient(90deg, #e53934 100%, #222 0%)
			.upgrade-row__bot .upgrade-row__bot--left
				color: #e53934




		.upgrade-row
			flexbox()
			flex-flow: column nowrap
			width: 100%
			margin-top: 20px

			/* Subscription */
			.subscription
				flexbox()
				flex-flow: column nowrap
				text-align: center
				color: #717171
				font-size: 12px

				span
					color: #ffffff
					font-size: 14px
					margin-left: 5px

			/* Top */
			.upgrade-row__top
				padding: 5px 0

				.upgrade-row__top--bar
					width: 100%
					height: 5px
					background: color11

					span
						display: block
						height: 100%

			/* Bot */
			.upgrade-row__bot
				width: 100%
				flexbox()
				flex-flow: row nowrap
				justify-content: space-between
				align-items: center
				font-size: 12px

				/* .upgrade-row__bot--left.yellow
					color: lightYellow
				.upgrade-row__bot--left.red
					color: lightRed
				.upgrade-row__bot--right
					color: color10 */
		
		.upgrade-message
			margin: 20px 0 12px 0
		
		.manage-txt
			font-size: 12px
			color: color10
			box-sizing()
			padding: 12px 0





