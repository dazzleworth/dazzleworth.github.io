@import url('http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css')

/* PROFILE STYL ======================================== */

/* Resets */
a
	text-decoration: none

.usermenu
	overflow: auto !important
	background: color3

/* INPUT SEARCH */
input[type="text"]
	background: color0
	outline: none
	border: none


/* PROFILE ======================================== */
.profile-wrap
	position: relative
	width: 100%
	flexbox()
	flex-flow: column nowrap
	background: color3
	overflow: auto

	.profile-top,
	.profile-bot
		width: 100%

	/* Profile Row */
	.profile-row
		width: 100%
		flexbox()
		flex-flow: row nowrap
		align-items: center
		overflow: hidden
		box-sizing()
		padding: 0 16px
		text-align: center

		.profile-row__desc
			flexbox()
			flex-flow: column nowrap
			justify-content: center
			align-items: flex-start
			min-height: 56px
			flex: 1







